{
  "swagger": "2.0",
  "info": {
    "description": "This is API Documentation",
    "version": "1.0.0",
    "title": "ToDo App",
    "contact": {
      "email": "abduroza@students.unnes.ac.id"
    },
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    }
  },
  "basePath": "/api",
  "tags": [
    {
      "name": "Task",
      "description": "Everything about your task",
      "externalDocs": {
        "description": "Find out more about our store",
        "url": "http://swagger.io"
      }
    }
  ],
  "schemes": [
    "https",
    "http"
  ],
  "paths": {
    "/task/create": {
      "post": {
        "tags": [
          "Task"
        ],
        "summary": "Make new task",
        "description": "",
        "operationId": "addTodo",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Todo task will be post on database",
            "required": true,
            "schema": {
              "$ref": "#/definitions/TodoCreate"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Todo task created"
          }
        }
      }
    },
    "/task/index": {
      "get": {
        "tags": [
          "Task"
        ],
        "summary": "show all task",
        "responses": {
          "200": {
            "description": "All task showed!"
          }
        }
      }
    },
    "/task/show/{id}": {
      "get": {
        "tags": [
          "Task"
        ],
        "summary": "show todo by ID",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "type": "string",
            "required": true,
            "description": "to get id task"
          }
        ],
        "responses": {
          "200": {
            "description": "Selected task showed"
          }
        }
      }
    },
    "/task/update/{id}": {
      "put": {
        "tags": [
          "Task"
        ],
        "summary": "Update Todo",
        "description": "",
        "operationId": "updateTodo",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Task will be update",
            "required": true,
            "schema": {
              "$ref": "#/definitions/TodoUpdate"
            }
          },
          {
            "in": "path",
            "name": "id",
            "type": "string",
            "required": true,
            "description": "task will update"
          }
        ],
        "responses": {
          "200": {
            "description": "Todo updated"
          }
        }
      }
    },
    "/task/delete/{id}": {
      "delete": {
        "tags": [
          "Task"
        ],
        "summary": "Delete todolist",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "type": "string",
            "required": true,
            "description": "ID todolist you want to delete"
          }
        ],
        "description": "",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "Todo deleted"
          }
        }
      }
    }
  },
  "definitions": {
    "TodoCreate": {
      "type": "object",
      "required": [
        "name",
        "date",
        "note",
        "priority",
        "status"
      ],
      "properties": {
        "name": {
          "type": "string",
          "example": "Jogging"
        },
        "date": {
          "type": "string",
          "example": "2019-08-28T10:30:00.000Z"
        },
        "note": {
          "type": "string",
          "example": "biar sehat"
        },
        "priority": {
          "type": "string",
          "description": "task priority",
          "enum": [
            "none",
            "low",
            "medium",
            "high"
          ],
          "default": "none",
          "example": "high"
        },
        "status": {
          "type": "boolean",
          "default": false,
          "example": true
        }
      }
    },
    "TodoUpdate": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "example": "Jogging"
        },
        "date-time": {
          "type": "string",
          "example": "2019-08-28T10:30:00.000Z"
        },
        "note": {
          "type": "string",
          "example": "biar gembira"
        },
        "priority": {
          "type": "string",
          "description": "task priority",
          "enum": [
            "none",
            "low",
            "medium",
            "high"
          ],
          "default": "none",
          "example": "high"
        },
        "status": {
          "type": "boolean",
          "default": false,
          "example": true
        }
      }
    }
  },
  "externalDocs": {
    "description": "Find out more about Swagger",
    "url": "http://swagger.io"
  }
}
